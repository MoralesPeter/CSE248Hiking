package model;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;

public class Utilities {
	
	public static boolean authenticateUser(String username, String password, UserStorage userStorage) {
		if(userStorage.containsUser(username)) {
			User u = userStorage.searchUser(username);
			if(password.equals(u.getPassword()) && u.isActive()) {
				return true;
			}
		}
		return false;
	}
	
	public static String emitFirstName(String fileName) throws IOException {
		
		File file = new File(fileName);
		String [] firstNames = new String[2000];
		
		BufferedReader br1 = new BufferedReader(new InputStreamReader(new FileInputStream(file)));
	    String line = null;
	    int i = 0;
	    while((line = br1.readLine())!= null) {
	    	firstNames[i] = line;
			i++;
	    	}
		
		//get random name
		int randIndex = (int)(Math.random() * firstNames.length);
		
		br1.close();
		return firstNames[randIndex];
	}
	
	public static String emitLastName(String fileName) throws IOException {
		
		File file = new File(fileName);
		String [] lastNames = new String[2000];
		
		BufferedReader br1 = new BufferedReader(new InputStreamReader(new FileInputStream(file)));
	    String line = null;
	    int i = 0;
	    while((line = br1.readLine())!= null) {
	    	lastNames[i] = line;
			i++;
	    	}
		
		//get random name
		int randIndex = (int)(Math.random() * lastNames.length);
		
		br1.close();
		return lastNames[randIndex];
	}
}
